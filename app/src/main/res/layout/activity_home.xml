<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context=".HomeActivity"
        android:id="@+id/home_lyt_drawerLayout"
        >

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/home_view_navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/sidebar_header"
            app:menu="@menu/sidebar_menu"
    >
    </com.google.android.material.navigation.NavigationView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/home_img_background"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/home_img_background_label"/>

            <Button
                    android:id="@+id/home_btn_search"
                    android:layout_height="70dp"
                    android:layout_width="0dp"
                    android:text="@string/home_btn_search_label"
                    android:drawableLeft="@drawable/ic_action_search"
                    android:background="@color/white_background"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" app:layout_constraintHorizontal_bias="0.4"
                    android:textSize="18sp" app:layout_constraintTop_toTopOf="@+id/home_img_background"
                    android:layout_marginTop="20dp" android:drawableStart="@drawable/ic_action_search"
                    android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"/>

            <Button
                    android:id="@+id/home_btn_post"
                    android:layout_height="70dp"
                    android:layout_width="0dp"
                    android:text="@string/home_btn_post"
                    android:drawableLeft="@drawable/ic_action_post"
                    android:background="@color/white_background"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintBottom_toTopOf="@+id/guideline5"
                    android:drawableStart="@drawable/ic_action_post" android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp" android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content" android:layout_width="365dp"
                    app:layout_constraintEnd_toEndOf="@id/guideline4"
                    app:layout_constraintStart_toStartOf="@id/guideline3"
                    android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/home_btn_post">
                <TextView
                        android:text="@string/home_lbl_annunciRecenti_label"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/home_lbl_annunciRecenti"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="15dp"
                        android:id="@+id/home_view_recycleView"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline3"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05"/>
            <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline4"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintGuide_begin="190dp"
                    android:id="@+id/guideline5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>