<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context=".activity.HomeActivity"
        android:id="@+id/home_lyt_drawerLayout"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:navigationIcon="@drawable/ic_action_menu"
                    app:title="Home" android:id="@+id/home_tlbr_toolbar" android:background="@color/colorPrimary">

            </androidx.appcompat.widget.Toolbar>
            <ImageView
                    android:id="@+id/home_img_background"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_tlbr_toolbar"
                    android:contentDescription="@string/home_img_background_label"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content" android:layout_width="365dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_tlbr_toolbar">

                <Button
                        android:id="@+id/home_btn_search"
                        android:layout_height="70dp"
                        android:text="@string/home_btn_search_label"
                        android:drawableLeft="@drawable/ic_action_search"
                        android:background="@color/white_background"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/ic_action_search"
                        android:layout_width="match_parent"/>

                <Button
                        android:id="@+id/home_btn_post"
                        android:layout_height="70dp"
                        android:layout_width="match_parent"
                        android:text="@string/home_btn_post"
                        android:drawableLeft="@drawable/ic_action_post"
                        android:background="@color/white_background"
                        android:textSize="18sp"
                        android:drawableStart="@drawable/ic_action_post"
                        android:layout_marginTop="32dp"
                />
                <TextView
                        android:text="@string/home_lbl_annunciRecenti_label"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:id="@+id/home_lbl_annunciRecenti" android:layout_marginTop="30dp"
                        android:layout_marginLeft="4dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="15dp"
                        android:id="@+id/home_view_recycleView"/>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/home_view_navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/sidebar_menu"
    >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>