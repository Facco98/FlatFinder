<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login_signup"
        tools:context=".SignUpActivity">

    <EditText
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_signup"
            android:hint="@string/nome_signup_label"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="50dp"
    />
    <EditText
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/surname_signup"
            android:hint="@string/cognome_signup_label"
            android:importantForAutofill="no" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/logo" android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPassword_signup"
            android:hint="@string/ripeti_la_password_signup_label"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/password_signup" android:layout_marginTop="10dp"/>
    <View
            android:id="@+id/divider1"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toEndOf="@+id/oppure_login" android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/oppure_login" android:layout_marginTop="6dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@color/orange"
            android:id="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" android:contentDescription="@string/logo_app"
            app:layout_constraintStart_toStartOf="@+id/guideline2" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_signup"
            android:hint="@string/email_label"
            android:importantForAutofill="no" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/name_signup" android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_signup"
            android:hint="@string/password_label"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/email_signup" android:layout_marginTop="10dp"/>
    <Button
            android:text="@string/registrati_label"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:id="@+id/button_signup"
            android:background="#F78100"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/informativa_signup"/>
    <TextView
            android:text="@string/accedi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>
    <TextView
            android:text="@string/oppure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oppure_login"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/button_signup"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/oppure_login" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/oppure_login" android:layout_marginTop="6dp"/>
    <TextView
            android:text="@string/registrati_con_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_google"
            android:drawableRight="@drawable/ic_google"
            android:drawablePadding="8dp"
            android:id="@+id/google_signup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/oppure_login"
            android:textSize="18sp"/>
    <TextView
            android:text="@string/registrati_con_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_facebook"
            android:drawableRight="@drawable/ic_facebook"
            android:drawablePadding="8dp"
            android:id="@+id/facebook_signup" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/google_signup" android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.91727495"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.09245742"/>
    <CheckBox
            android:text="@string/informativa_e_condizioni_signup_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/informativa_signup"
            app:layout_constraintEnd_toEndOf="@id/guideline" app:layout_constraintStart_toStartOf="@id/guideline2"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/confirmPassword_signup"
            app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>