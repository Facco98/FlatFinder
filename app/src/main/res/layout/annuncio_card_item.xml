<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="2dp"
                                   app:cardElevation="2dp" android:padding="10dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/home_card_img_image" android:scaleType="centerCrop" android:layout_weight="1"
                android:contentDescription="immagine annuncio"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp" android:layout_marginLeft="10dp" android:layout_marginRight="20dp">
            <TextView
                    android:text="â‚¬ 250.000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/home_card_lbl_prezzo"
                    android:textSize="24sp" android:textStyle="bold" android:gravity="start|center_vertical"
                    android:layout_weight="1"/>
            <TextView
                    android:text="100 mq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/home_card_lbl_dimensione"
                    android:gravity="center_vertical|end" android:layout_marginRight="20dp"
                    android:layout_gravity="center" android:layout_marginEnd="20dp"/>
            <TextView
                    android:text="3 locali"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/home_card_lbl_nlocali"
                    android:gravity="center_vertical|end"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Via Roma 20, Trento"
                android:layout_marginTop="5dp"
                android:id="@+id/home_card_lbl_indirizzo"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp" android:layout_marginLeft="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>