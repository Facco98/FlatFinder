<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginRight="10dp"
                android:layout_weight="1">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:gravity="start|top"
                    android:ems="10"
                    android:background="@drawable/background_edittext"
                    android:padding="10dp" android:drawableEnd="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableRight="@drawable/ic_euro_symbol_black_24dp"
                    android:id="@+id/ricerca_filtri_appartamento_txt_affittoMin"/>
            <TextView
                    android:text="Affitto minimo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:gravity="start|top"
                    android:ems="10"
                    android:background="@drawable/background_edittext"
                    android:padding="10dp" android:drawableEnd="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableRight="@drawable/ic_euro_symbol_black_24dp"
                    android:id="@+id/ricerca_filtri_appartamento_txt_affittoMax"/>
            <TextView
                    android:text="Affitto massimo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginRight="10dp"
                android:layout_weight="1">
            <Spinner
                    android:layout_width="match_parent"
                    android:entries="@array/arredamento"
                    android:layout_height="45dp" android:id="@+id/ricerca_filtri_appartamento_spinner_arredamento"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arredamento"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Spinner
                    android:layout_width="match_parent"
                    android:entries="@array/consumo_energetico"
                    android:layout_height="45dp"
                    android:id="@+id/ricerca_filtri_appartamento_spinner_classeenergetica"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Classe energetica"/>
        </LinearLayout>
    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:gravity="start|top"
            android:ems="10"
            android:background="@drawable/background_edittext"
            android:padding="10dp" android:id="@+id/ricerca_filtri_appartamento_txt_disponibilità"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponibilità"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginRight="10dp"
                android:layout_weight="1">
            <Spinner
                    android:layout_width="match_parent"
                    android:entries="@array/dimensione"
                    android:layout_height="45dp" android:id="@+id/ricerca_filtri_appartamento_spinner_dimensioneMin"/>
            <TextView
                    android:text="Dimensione minima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <Spinner
                    android:layout_width="match_parent"
                    android:entries="@array/dimensione"
                    android:layout_height="45dp" android:id="@+id/ricerca_filtri_appartamento_spinner_dimensioneMax"/>
            <TextView
                    android:text="Dimensione massima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    <RadioGroup android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ricerca_filtri_appartamento_rdgroup_nlocali">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="1+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="2+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="3+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="4+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="5+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="6+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="7+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
    </RadioGroup>
    <TextView
            android:text="N. locali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    <RadioGroup android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ricerca_filtri_appartamento_rdgroup_nbagni">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="1+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="2+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="3+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:button="@color/colorTransparentGrey"
                android:text="4+"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/selector_buttongroup"
        />
    </RadioGroup>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N. bagni"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    <Spinner
            android:layout_width="match_parent"
            android:entries="@array/piano"
            android:layout_height="45dp" android:id="@+id/ricerca_filtri_appartamento_spinner_piano"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Piano"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="15dp"
            android:text="Imposta filtri"
            android:id="@+id/ricerca_filtri_appartamento_btn_imposta"/>

</LinearLayout>