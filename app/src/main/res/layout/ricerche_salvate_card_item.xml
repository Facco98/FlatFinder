<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="2dp"
                                   app:cardElevation="5dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="20dp">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Via Giovanni Segantini 15, Trento, Italia"
                  android:id="@+id/ricerche_salvate_card_lbl_indirizzo"
                  android:textSize="20sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entro 50 Km"
                android:layout_marginTop="10dp"
                android:id="@+id/ricerche_salvate_card_lbl_raggio"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Elimina"
                android:layout_gravity="end"
                android:textColor="@color/white_background"
                android:background="@drawable/background_dettagli_button"
                android:id="@+id/ricerche_salvate_card_btn_elimina"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>