<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              >
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white_background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ricerca_salva_zona_btn_chiudi"
                    android:src="@drawable/ic_baseline_close_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salva ricerca"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:gravity="start|top"
                android:ems="10"
                android:background="@drawable/background_edittext"
                android:padding="10dp"
                android:id="@+id/ricerca_salva_zona_txt_nomeRicerca"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome della ricerca" />
        <Space
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Desidero ricevere notifiche"
                  android:textSize="18sp"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="App"
                  android:checked="true"
                  android:padding="10dp"
                  android:id="@+id/ricerca_salva_zona_chkbox_notificheApp"/>
        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:checked="false"
                  android:padding="10dp"
                  android:id="@+id/ricerca_salva_zona_chkbox_notificheEmail"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="15dp"
                android:text="Salva"
                android:id="@+id/ricerca_salva_zona_btn_salva"/>

    </LinearLayout>


</LinearLayout>