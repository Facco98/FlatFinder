<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="2dp"
                                   app:cardElevation="5dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="20dp">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Stanza singola a Trento"
                  android:id="@+id/zone_salvate_card_lbl_nomeRicerca"
                  android:textSize="20sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera singola"
                android:layout_marginTop="10dp"
                android:id="@+id/zone_salvate_card_lbl_categoria"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_gravity="right|end"
                      android:orientation="horizontal">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zone_salvate_card_btn_modifica"
                    android:background="@color/colorTransparentGrey"
                    android:layout_marginRight="5dp"
                    android:text="Modifica"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elimina"
                    android:textColor="@color/white_background"
                    android:background="@drawable/background_dettagli_button"
                    android:id="@+id/zone_salvate_card_btn_elimina"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>